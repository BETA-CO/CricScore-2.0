<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CricScore" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark Theme Colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_text_primary</item>
        <item name="colorPrimaryContainer">@color/dark_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/dark_text_primary</item>
        <item name="colorSecondary">@color/dark_accent_red</item>
        <item name="colorOnSecondary">@color/dark_text_primary</item>

        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_elevated_surface</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_secondary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Outlines -->
        <item name="colorOutline">@color/dark_text_secondary</item>

        <!-- Main Text -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
    </style>
</resources>