<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CricScore" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark Theme Colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/dark_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/dark_accent_red</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_elevated_surface</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_secondary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Outlines -->
        <item name="colorOutline">@color/dark_text_secondary</item>

        <!-- Main Text -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Dialog Styling to fix Green Text -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Forces dialog text to use your soft white color -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- This overrides the button text color in Material3 Dialogs -->
        <item name="colorPrimary">@color/white</item>

        <!-- Specifically for legacy AlertDialog buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.DialogButton</item>
    </style>

    <style name="Widget.App.DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>