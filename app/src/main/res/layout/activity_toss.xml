<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Toss"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who wins the toss?"
            android:textSize="15sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="28dp"/>

        <!-- COIN STYLE BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFlip"
            style="@style/Widget.Material3.Button"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:text="Flip Coin"
            android:textStyle="bold"
            android:textSize="18sp"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="90dp"/>

        <!-- EDIT TEAMS BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditTeams"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Edit Teams"
            android:textColor="?android:attr/textColorPrimary"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="?android:attr/textColorPrimary"
            android:visibility="visible"/>

        <!-- RESULT CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvTossResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/tvTossResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- START BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartScoring"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="26dp"
            android:text="Start Scoring"
            android:textStyle="bold"
            app:backgroundTint="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:cornerRadius="18dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>