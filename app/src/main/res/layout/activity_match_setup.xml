<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- TOP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Match Details"
            app:titleCentered="true"
            app:titleTextColor="?android:attr/textColorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- FORM CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Team A -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Team A Name"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTeamA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Team B -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Team B Name"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTeamB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Common Player -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/common_player_hint"
                        android:layout_marginBottom="12dp"
                        app:helperText="@string/common_player_helper">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCommonPlayer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Players -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of Players"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPlayerCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="11"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Overs -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Overs"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTotalOvers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="5"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Enable 1D/2D Checkbox -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cbEnableDotOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable 1D &amp; 2D Options"
                        android:checked="true"
                        android:textColor="?android:attr/textColorPrimary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MAIN BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Next: Team A Players"
                android:layout_marginTop="24dp"
                app:cornerRadius="32dp"/>

            <!-- SECONDARY BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDummy"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill Dummy Data"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>