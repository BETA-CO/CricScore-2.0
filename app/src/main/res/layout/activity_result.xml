<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- WINNER HERO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/tvWinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="ðŸ† Team A Won!"
                    android:textColor="?attr/colorOnPrimary"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:textAlignment="center"/>
            </com.google.android.material.card.MaterialCardView>


            <!-- TEAM A CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTeam1Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Team A Scorecard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <TextView
                        android:id="@+id/tvTeam1Result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/0 (0.0)"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/llTeam1Stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- TEAM B CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTeam2Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Team B Scorecard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <TextView
                        android:id="@+id/tvTeam2Result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/0 (0.0)"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/llTeam2Stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHome"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="28dp"
                android:text="Back to Home"
                android:textStyle="bold"
                app:cornerRadius="32dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>